<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Welcome User!"
            android:textAlignment="center"
            android:textColor="#0B5460"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Edit your details here.."
            android:textAlignment="center"
            android:textColor="#0B5460"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="12dp"
                android:text="Name"
                android:textColor="#0B5460"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter your Name"
                android:id="@+id/username"
                android:gravity="center"
                android:textColorHint="#0B5460"
                android:background="@drawable/blueoutlinebg"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="12dp"
                android:text="Email"
                android:textColor="#0B5460"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="xyz@gmail.com"
                android:id="@+id/useremail"
                android:gravity="center"
                android:textColorHint="#0B5460"
                android:background="@drawable/blueoutlinebg"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="12dp"
                android:text="Contact No."
                android:textColor="#0B5460"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="xxxxxxxxxx"
                android:id="@+id/usercontact"
                android:gravity="center"
                android:textColorHint="#0B5460"
                android:background="@drawable/blueoutlinebg"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>


        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/navigation_bar_background"
            android:text="Save"
            android:id="@+id/savebtn"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#0B5460"
            android:gravity="center"
            android:layout_gravity="center"/>


    </LinearLayout>
</RelativeLayout>